@model HiveProject.Viewmodels.Preferences

@{
    ViewBag.Title = "Preferences";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("EditPreferences","MainMenu",FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Preferences</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (!string.IsNullOrWhiteSpace(ViewBag.message))
    {
        <font color="green">@ViewBag.message</font>
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Range, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Range, new { htmlAttributes = new { @Value = 5, min = 5, max = 30, } }) Km
            @Html.ValidationMessageFor(model => model.Range, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Preference, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.Preference, "Select Gender", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Preference, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" style="background-color:#a51a64; color:ActiveBorder" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to Map", "Index", null, new { @class = "btn btn-primary", @role = "button" })
</div>
