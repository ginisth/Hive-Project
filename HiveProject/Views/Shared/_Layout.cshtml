<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hive Dating App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")   



</head>
<body style="background:#F5F0DF">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style=" background: linear-gradient(to bottom right, #dd2476 10%, #ff512f 100%)">
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link">@Html.ActionLink("Home", "Index", "MainMenu", new { area = "" }, new { @class = "navbar-brand" })</a>
                <a class="nav-link">@Html.ActionLink("Ιnbox", "ChatAction", "Chat", new { area = "" }, new { @class = "navbar-brand" })</a>
                <a class="nav-link">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })</a>

            </div>
            <div class="navbar-nav ml-auto">
                @if (Request.IsAuthenticated)
                {
                    <a href='@Url.Action("Profiles","MainMenu")'>
                        <img id="myimage" class="rounded-circle" src="" height="40" width="48" />
                    </a>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year- Hive</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            async: true,
            url: "/MainMenu/GetPic",
            dataType: "json",
            success: function (data) {
                $("#myimage").attr('src', data);
            }
        });
    });

    async function sendData(url, data) {
        const urlToSendRequest = "http://" + window.location.host + url;

        const rawData = await fetch(urlToSendRequest, {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json',
            },
            credentials: "same-origin",
            body: JSON.stringify(data)
        });

        return rawData.json();
    }
</script>
