@using PagedList;
@using PagedList.Mvc;
@model IPagedList<HiveProject.Models.MessageViewModel>

@{
    ViewBag.Title = "ShowUserMessages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Messages</h2>
<br />

<table class="table">
    <tr>
        <th>
            Message Id
        </th>

        <th>
            Sender Name
        </th>

        <th>
            Receiver Name
        </th>
        <th>
            Message Body
        </th>
        <th>
            Date
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MessageId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SenderName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ReceiverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            <td>
                @Html.ActionLink("Delete", "DeleteMessage", new {  id=item.MessageId }, new { @class = "btn btn-danger", @role = "button", @onclick = "return confirm('Are you sure?');" })
            </td>
        </tr>
    }

</table>

<div>
    <ul class="pagination">@Html.PagedListPager(Model, page => Url.Action("ShowUserMessages", new { page }))</ul>
</div>

<div>
    <p>@Html.ActionLink("Back to Users", "Index", null, new { @class = "btn btn-primary", @role = "button" })</p> 
</div>
