@model IEnumerable<HiveProject.Viewmodels.GetUsersViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thumbnail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.Username)

            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Thumbnail)*@
                <img height="50" src="~/Content/Images/@Url.Content(item.Thumbnail)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Like", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Dislike", "Details", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>
